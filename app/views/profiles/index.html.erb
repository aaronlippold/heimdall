<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Profiles
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to ('<i class="fa fa-dashboard"> </i>Dashboard').html_safe, home_path %></li>
    <li class="active">Profiles</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Profiles</h3>
        </div>
        <!-- /.box-header -->
        <% if can? :read, Profile %>
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th>Name</th>
                <th>Title</th>
                <th>Maintainer</th>
                <th>Copyright</th>
                <th>License</th>
                <th>Summary</th>
                <th>Version</th>
                <th>Editable</th>
                <th>Owner</th>
                <th>Action</th>
              </tr>
              <% @profiles.each do |profile| %>
                <tr>
                  <td><%= link_to profile.name, profile %></td>
                  <td><%= profile.title %></td>
                  <td><%= profile.maintainer %></td>
                  <td><%= profile.copyright %></td>
                  <td><%= profile.license %></td>
                  <td><%= profile.summary %></td>
                  <td><%= profile.version %></td>
                  <td><%= profile.is_editable? %></td>
                  <td><%= profile.created_by.try(:email) %></td>
                  <td><% if (can? :delete, profile) && (profile.is_editable?) %><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <% if can? :create, Profile %>
      <div class="col-xs-6">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Upload Profile</h3>
          </div>
          <div class="box-body">
            <%= form_tag(upload_profile_path, multipart: true, :html => {class: 'form-control'}) do %>
              <div class="input-group">
                <%= file_field_tag :file, :class => "menu-text" %>
              </div>
              <br>
              <div class="actions">
                <%= submit_tag 'Upload', :class => "btn btn-info" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<!-- /.content -->
