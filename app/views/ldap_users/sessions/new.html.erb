<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Login
  </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">
  <div class="row">
    <div class="col-md-6">
      <!-- Horizontal Form -->
      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Ldap Login</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-horizontal'} ) do |f| %>
            <div class="box-body">
              <div class="form-group  has-feedback">
                <label for="inputEmail4" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <%= f.email_field :email, autofocus: true, :id =>"inputEmail4", :class => "form-control", :placeholder => "Email" %>
                  <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
              </div>
              <div class="form-group has-feedback">
                <label for="inputPassword4" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                  <%= f.password_field :password, autocomplete: "off", :id =>"inputPassword4", :class => "form-control" %>
                  <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Log in", :class => "btn btn-primary btn-block btn-flat"  %>
            </div>
          <% end %>
          <div class="box-body">
            <div class="form-group">
              <%= render "ldap_users/shared/links" %>
            </div>
          </div>
       </div>
      </div>
    </div>
  </div>
  <!-- /.login-box-body -->

</section>
<!-- /.content -->
