#!/usr/bin/env ruby
# frozen_string_literal = true

secrets = File.join(File.dirname(__FILE__), '../config/secrets.yml')
if File.exist?(secrets)
  File.delete(secrets)
  puts "\n ==== Secrets for building package deleted ===="
else
  File.open(secrets, 'a') do |f|
    fake_key = 'x' * 128
    file_template = "production:\n  secret_key_base: #{fake_key}\n"
    f.write(file_template)
  end
  puts "\n ==== Secrets for building package created ===="
end
