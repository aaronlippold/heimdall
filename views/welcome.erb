    <script type="text/javascript" class="init">
      $.getJSON("/inspec_results_list.json", function(json) 
      {
        results_list_html = '';
        profile_list_html = '';
        Object.keys(json).forEach(function(key) {
        if (key.split(';')[0] == 'result')
        {
            results_list_html = results_list_html + '<li><a href="#" >' + key.split(';')[1] + '<span class="fa arrow"></span></a><ul class="nav nav-third-level">'
            json[key].map( function(item) 
            {
              link = "/result/" + btoa( key + ': ' + item ) + ".html"
              results_list_html = results_list_html + '<li><a href=' + link + '>'+ item + '</a></li>'
            })
            results_list_html = results_list_html + '</ul></li>'
        }
        else if (key.split(';')[0] == 'profile')
        {
            profile_list_html = profile_list_html + '<li><a href="#" >' + key.split(';')[1] + '<span class="fa arrow"></span></a><ul class="nav nav-third-level">'
            json[key].map( function(item) 
            {
              link = "/profile/" + btoa( key + ': ' + item ) + ".html"
              profile_list_html = profile_list_html + '<li><a href=' + link + '>'+ item + '</a></li>'
            })
            profile_list_html = profile_list_html + '</ul></li>'
        }
        });

        document.getElementById("results_list").innerHTML = results_list_html;
        document.getElementById("profile_list").innerHTML = profile_list_html;

      });
          </script>



